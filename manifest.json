{
  "manifest_version": 2,
  "name": "YouTube Shorts Volume Control and Seeking Extension",
  "version": "1.0",
  "description": "Allows you to control the volume and seek on YouTube Shorts videos.",
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/shorts/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
}